/* pages/welcome/welcome.wxss */
@import "../../style/weui.wxss";

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx;
    margin-top: 200rpx;
    min-height: 300rpx;
}

.btn_login{
    width: 150rpx;
    height: 225rpx;
    background-color: rgba(0,0,0,0);
    color: rgba(0,0,0,0);
    border-radius: 0rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.btn_login::after {
    border: 0; 
}
  
.btnImg {
    width: 128rpx;
    height: 185rpx;
}

.onlyImg {
    width: 128rpx;
    height: 185rpx;
    margin-top: 35rpx;
}

.userinfo-avatar {
    margin-top: 40rpx;
    width: 128rpx;
    height: 128rpx;
}

.userinfo-nickname {
    text-align: center;
    color: var(--weui-FG-1);
    font-size: 16px;
}

.weui-loading__wrp{display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-align:center;-webkit-align-items:center;align-items:center;-webkit-box-pack:center;-webkit-justify-content:center;justify-content:center;padding:32rpx}.weui-loading__wrp .weui-loading,.weui-loading__wrp .weui-primary-loading{margin:0 20rpx}.weui-loading__wrp:last-child{background-color:rgba(0,0,0,.1)}

.weui-footer {
    margin-bottom: 50rpx;
}
